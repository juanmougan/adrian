<div id="supersede-modal" class="fixed inset-0 bg-black bg-opacity-50 flex justify-center items-center hidden z-50">
  <div class="bg-white p-6 rounded shadow-md w-full max-w-lg">
    <h2 class="text-lg font-semibold mb-4">Create Superseding ADR</h2>

    <%= form_with model: Adr.new, url: adrs_path, method: :post, data: { controller: "supersede-form" } do |f| %>
      <div class="mb-4">
        <%= f.label :title, class: "block font-medium" %>
        <%= f.text_field :title, class: "w-full border rounded p-2" %>
      </div>

      <div class="mb-4">
        <%= f.label :context, class: "block font-medium" %>
        <%= f.text_area :context, class: "w-full border rounded p-2" %>
      </div>

      <div class="mb-4">
        <%= f.label :decision, class: "block font-medium" %>
        <%= f.text_area :decision, class: "w-full border rounded p-2" %>
      </div>

      <div class="mb-4">
        <%= f.label :consequences, class: "block font-medium" %>
        <%= f.text_area :consequences, class: "w-full border rounded p-2" %>
      </div>

      <%= hidden_field_tag "supersedes", nil, data: { supersede_target: "supersedesInput" } %>

      <div class="flex justify-end">
        <button type="button" data-action="click->supersede#close" class="mr-2 px-4 py-2 bg-gray-300 rounded">Cancel</button>
        <%= f.submit "Create", class: "bg-blue-500 text-white px-4 py-2 rounded" %>
      </div>
    <% end %>
  </div>
</div>
